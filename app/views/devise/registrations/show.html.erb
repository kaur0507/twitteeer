<div class="column is-one-quarter">
  <nav class="panel"> 
    <p class="panel-heading"><%= t '.title' %></p>
    <div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar %>
          <% else %>
            <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
          <% end %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= current_user.name %></strong>
              <small>@<%= current_user.username %></small>
            </p>
          </div>
        </div>
      </article>
    </div>
    <div class="panel-block">
      <div class="level is-mobile">
        <div class="level-item has-centered-text">
          <div>
            <p class="heading"><%= t '.tweeets_count' %></p>
            <p class="title is-6"><%= current_user.tweeets.count %></p>
          </div>
        </div>
        <div class="level-item has-centered-text">
          <div>
            <p class="heading"><%= t '.following_count' %></p>
            <p class="title is-6"><%= current_user.followees.count %></p>
          </div>
        </div>
        <div class="level-item has-centered-text">
          <div>
            <p class="heading"><%= t '.followers_count' %></p>
            <p class="title is-6"><%= current_user.followers.count %></p>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>