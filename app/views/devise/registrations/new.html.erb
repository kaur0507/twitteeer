<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h2 class="title is-2"><%= t '.title' %></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :name, label: t('.name'), required: true, autofocus: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :username, label: t('.username'), required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :email, label: t('.email'), required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, label: t('.password'), required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, hint: (t('.minimum_chars', minimum_length: @minimum_password_length) if @minimum_password_length) %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation, label: t('.confirmation'), required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, t('.button'), class: "button is-info is-medium" %>
            </div>
          </div>

        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div> 