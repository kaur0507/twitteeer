<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar %>
          <% else %>
            <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
          <% end %>
        </p>
      </figure>
      <div class="media-content">
        <%= render 'tweeets/form' %>
      </div>
    </article>
  <% else %>
    <article class="media box">
      <div class="media-content">
        <h1><strong>You need to be signed in to add Tweeets </strong></h1>
      </div>
    </article>
  <% end%>

  <% @tweeets.each do |tweeet| %>
    <% if user_signed_in? && current_user.followees.include?(tweeet.user)%>
      <div class="box">
        <article class="media">
          <div class="media-left">
            <p class="image is-64x64">
              <% if tweeet.user.avatar.attached? %>
              <%= image_tag tweeet.user.avatar %>
            <% else %>
              <%= gravatar_image_tag(tweeet.user.email, size: 64, alt: tweeet.user.name) %>
            <% end %>
            </p>
          </div>
          <div class="media-content">
            <div class="content">
              <p><strong><%= tweeet.user.name %></strong></p>
              <p><small>@<%= tweeet.user.username %></small></p>
              <p><%= tweeet.tweeet %></p>
              <p><%= image_tag(tweeet.image) if tweeet.image? %></p>
            </div>

            <% if current_user.username == tweeet.user.username %>
              <nav class="level">
                <div class="level-left is-mobile">
                  <%= link_to tweeet, class: "level-item" do %>
                    <span class="icon">
                      <i class="fa fa-link" aria-hidden="true"></i>
                    </span>
                  <% end %>
                  <%= link_to edit_tweeet_path(tweeet), class: "level-item" do %>
                    <span class="icon">
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                    </span>
                  <% end %>
                  <%= link_to tweeet, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?"} do %>
                    <span class="icon">
                      <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </span>
                  <% end %>
                </div>
              </nav>
            <% end %>
          </div>
        </article>
      </div>
    <% elsif !user_signed_in? %>
      <div class="box">
        <article class="media">
          <div class="media-left">
            <p class="image is-64x64">
              <% if tweeet.user.avatar.attached? %>
              <%= image_tag tweeet.user.avatar %>
            <% else %>
              <%= gravatar_image_tag(tweeet.user.email, size: 64, alt: tweeet.user.name) %>
            <% end %>
            </p>
          </div>
          <div class="media-content">
            <div class="content">
              <p><strong><%= tweeet.user.name %></strong></p>
              <p><small>@<%= tweeet.user.username %></small></p>
              <p><%= tweeet.tweeet %></p>
              <p><%= image_tag(tweeet.image) if tweeet.image? %></p>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  <% end %>
</div>