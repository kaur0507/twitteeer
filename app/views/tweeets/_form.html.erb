<%= simple_form_for(@tweeet) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :tweeet, label: t('.label'), input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: t('.placeholder'), autofocus: true %>
    <p class="form-select"><%= f.select :category_id, Category.all.map { |c| I18n.locale == I18n.default_locale ? [c.name, c.id] : [c.polish_name, c.id] } %></p>
    <p class="form-select"><%= f.file_field :image, accept: 'image/png, image/gif, image/jpeg' %></p>
</div><br>
<%= f.button :submit, value: t('.button'), class: "button is-info" %>
<% end %>